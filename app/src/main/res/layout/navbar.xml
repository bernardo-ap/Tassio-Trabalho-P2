<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#EF7777"
        android:padding="8dp"
        android:elevation="4dp">

        <!-- Logo à esquerda (Botão) -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_g1"
            android:contentDescription="Logo"
            android:layout_gravity="start"
            android:clickable="true"
            android:focusable="true" />

        <!-- Espaço para centralizar itens -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Ícone do Menu Hambúrguer -->
        <ImageView
            android:id="@+id/menuHamburger"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menu"
            android:contentDescription="Menu Hambúrguer"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- Conteúdo da página -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Aqui você pode adicionar outros elementos da sua página -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conteúdo da Página"
            android:textSize="18sp" />

        <!-- Adicione mais componentes aqui -->

    </LinearLayout>

</LinearLayout>